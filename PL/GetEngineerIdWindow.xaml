<Window x:Class="PL.GetEngineerIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="GetEngineerIdWindow" Height="235" Width="299"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="put your id:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Id}" VerticalAlignment="Top" Width="120"/>
        <Button Content="ok" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.075,0.678"  Width="120" Click="ClickOk"/>
        <Button Content="Back" Click="Button_Click"/>
    </StackPanel>
</Window>
