<Window x:Class="PL.Scheduled"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Scheduled" Height="124" Width="351">
    <Grid RenderTransformOrigin="0.508,0.79" Height="175" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" Width="138" 
        
        SelectedDate="{Binding Task.ScheduledTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Height="26" Margin="126,54,0,0"/>
        <Label Content="Schedule:" HorizontalAlignment="Left" Margin="42,62,0,0" VerticalAlignment="Top"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="-11,-1,0,87" Grid.RowSpan="2">
            <Button Content="Button" Margin="300,65,0,0" Click="Button_Click_1"/>
        </Border>
        <Button Content="Back" HorizontalAlignment="Left" Margin="286,10,0,0" VerticalAlignment="Top" Height="35" Width="48" Click="Button_Click"/>
    </Grid>
</Window>
