<Window x:Class="PL.Gantt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="Gantt" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,78,715,298" RenderTransformOrigin="0.748,0.244">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.314"/>
                    <TranslateTransform X="-0.082" Y="-0.115"/>
                </TransformGroup>
            </ScrollViewer.RenderTransform>
        </ScrollViewer>
        <Button Content="close" HorizontalAlignment="Left" Margin="10,0,0,392" VerticalAlignment="Bottom" Click="Button_Click" Height="32" Width="56"/>
        <Label Content="Gantt" HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" FontFamily="Bodoni MT Condensed" Width="50"/>

    </Grid>

</Window>
